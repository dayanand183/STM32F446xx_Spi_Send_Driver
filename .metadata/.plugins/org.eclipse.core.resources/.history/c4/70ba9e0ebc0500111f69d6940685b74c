#include "stm32f446xx_spi_driver.h"

void SPI_InIt(SPI_Handle_t *pSPIHandle)
{
	// 1. Configure the CR1 register
	uint32_t temp = 0;

	// Enable the peripheral Clock
	SPI_PClockControl(pSPIHandle->pSPIx, ENABLE);

	temp |= pSPIHandle->SPI_Config.SPI_DeviceMode << SPI_CR1_MSTR;

	// 2. Configure the Bus Configuration
	if(pSPIHandle->SPI_Config.SPI_BusConfig == SPI_FULL_DUPLEX)
	{
		// BIDI mode must be cleared
		temp &= ~(1<<SPI_CR1_BIDIMODE);
	}
	else if(pSPIHandle->SPI_Config.SPI_BusConfig == SPI_HALF_DUPLEX)
	{
		// BIDI mode must be set
		temp |= (1<<SPI_CR1_BIDIMODE);
	}
	else if(pSPIHandle->SPI_Config.SPI_BusConfig == SPI_SIMPLEX_RX_ONLY)
	{
		// BIDI mode must be cleared
		temp &= ~(1<<SPI_CR1_BIDIMODE);
		// RXOnly bit must be set
		temp |= (1<<SPI_CR1_RXONLY);
	}

	// 3. Configure the Clock speed
	temp |= pSPIHandle->SPI_Config.SPI_BusConfig << SPI_CR1_BR;

	// 4. Configure the Data frame format
	temp |= pSPIHandle->SPI_Config.SPI_DFF << SPI_CR1_DFF;

	// 5. Configure the CPOL
	temp |= pSPIHandle->SPI_Config.CPOL << SPI_CR1_CPOL;

	// 6. Configure the CPHA
	temp |= pSPIHandle->SPI_Config.CPHA << SPI_CR1_CPHA;

	/* Assigning all value to the CR1 register */
	pSPIHandle->pSPIx->CR1 |= temp;

}

void SPI_DeInIt(SPI_RegDef_t *pSPIx)
{
	if(pSPIx == SPI1)
	{
		SPI1_REG_RESET();
	}
	else if(pSPIx == SPI2)
	{
		SPI2_REG_RESET();
	}
	else if(pSPIx == SPI3)
	{
		SPI3_REG_RESET();
	}
	else if(pSPIx == SPI4)
	{
		SPI4_REG_RESET();
	}
}

uint8_t SPI_GetFlagStatus(SPI_RegDef_t *pSPIx, uint32_t flag)
{
	if(pSPIx->SR & flag)
	{
		return FLAG_SET;
	}
	return FLAG_RESET;
}

void SPI_PClockControl(SPI_RegDef_t *pSPIx, uint8_t enordis)
{
	if(enordis == ENABLE)
	{
		if(pSPIx == SPI1)
		{
			SPI1_PCLK_EN();
		}
		else if(pSPIx == SPI2)
		{
			SPI2_PCLK_EN();
		}
		else if(pSPIx == SPI3)
		{
			SPI3_PCLK_EN();
		}
		else if(pSPIx == SPI4)
		{
			SPI4_PCLK_EN();
		}
	}
	else
	{
		if(pSPIx == SPI1)
		{
			SPI1_PCLK_DIS();
		}
		else if(pSPIx == SPI2)
		{
			SPI2_PCLK_DIS();
		}
		else if(pSPIx == SPI3)
		{
			SPI3_PCLK_DIS();
		}
		else if(pSPIx == SPI4)
		{
			SPI4_PCLK_DIS();
		}
	}

}

void SPI_DataSend(SPI_RegDef_t *pSPIx, uint8_t *pTxBuffer, uint32_t len)
{
	while(len > 0)
	{
		// 1. wait until TXE set 1
//		while(!(pSPIx->SR & (1 << 1)));
		while(SPI_GetFlagStatus(pSPIx, SPI_TXE_FLAG) == FLAG_RESET);
		{
			if(pSPIx->CR1 & SPI_CR1_DFF)
			{
				pSPIx->CR1 = *((uint16_t*)pTxBuffer);
				len--;
				len--;
				(uint16_t*)pTxBuffer++;
			}

			else
			{
				pSPIx->CR1 = *pTxBuffer;
				len--;
				pTxBuffer++;
			}
		}

	}
}

void SPI_DataRecieve(SPI_RegDef_t *pSPIx, uint8_t *pRxBuffer, uint32_t len)
{
	while(len > 0)
	{

	}

}


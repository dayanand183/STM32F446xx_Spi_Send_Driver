#include "stm32f446xx_spi_driver.h"

void SPI_InIt(SPI_Handle_t *pSPIx)
{
	// 1. Configure the CR1 register
	uint32_t temp = 0;

	temp |= pSPIx->SPI_Config.SPI_DeviceMode << SPI_CR1_MSTR;

	// 2. Configure the Bus Configuration
	if(pSPIx->SPI_Config.SPI_BusConfig == SPI_FULL_DUPLEX)
	{
		// BIDI mode must be cleared
		temp &= ~(1<<SPI_CR1_BIDIMODE);
	}
	else if(pSPIx->SPI_Config.SPI_BusConfig == SPI_HALF_DUPLEX)
	{
		// BIDI mode must be set
		temp |= (1<<SPI_CR1_BIDIMODE);
	}
	else if(pSPIx->SPI_Config.SPI_BusConfig == SPI_SIMPLEX_RX_ONLY)
	{
		// BIDI mode must be cleared
		temp &= ~(1<<SPI_CR1_BIDIMODE);
		// RXOnly bit must be set
		temp |= (1<<SPI_CR1_RXONLY);
	}

	// 3. Configure the Clock speed
	temp |= pSPIx->SPI_Config.SPI_BusConfig << SPI_CR1_BR;

	// 4. Configure the Data frame format
	temp |= pSPIx->SPI_Config.SPI_DFF << SPI_CR1_DFF;

	// 5. Configure the CPOL
	temp |= pSPIx->SPI_Config.CPOL << SPI_CR1_CPOL;

	// 6. Configure the CPHA
	temp |= pSPIx->SPI_Config.CPHA << SPI_CR1_CPHA;

	/* Assigning all value to the CR1 register */
	pSPIx->pSPIx->CR1 |= temp;

}

void SPI_DeInIt(SPI_RegDef_t *pSPIx)
{
	if(pSPIx == SPI1)
	{
		SPI1_REG_RESET();
	}
	else if(pSPIx == SPI2)
	{
		SPI2_REG_RESET();
	}
	else if(pSPIx == SPI3)
	{
		SPI3_REG_RESET();
	}
	else if(pSPIx == SPI4)
	{
		SPI4_REG_RESET();
	}
}

void SPI_PClockControl(SPI_RegDef_t *pSPIx, uint8_t enordis)
{
	if(enordis == ENABLE)
	{
		if(pSPIx == SPI1)
		{
			SPI1_PCLK_EN();
		}
		else if(pSPIx == SPI2)
		{
			SPI2_PCLK_EN();
		}
		else if(pSPIx == SPI3)
		{
			SPI3_PCLK_EN();
		}
		else if(pSPIx == SPI4)
		{
			SPI4_PCLK_EN();
		}
	}
	else
	{
		if(pSPIx == SPI1)
		{
			SPI1_PCLK_DIS();
		}
		else if(pSPIx == SPI2)
		{
			SPI2_PCLK_DIS();
		}
		else if(pSPIx == SPI3)
		{
			SPI3_PCLK_DIS();
		}
		else if(pSPIx == SPI4)
		{
			SPI4_PCLK_DIS();
		}
	}

}

